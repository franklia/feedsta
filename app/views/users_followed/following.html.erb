<%= render "layouts/container-start" %>
  <div class="padding-container followers">
	<h1>I'm Following</h1>
		<ul class="list-group">
			<% @following['data'].each do |array| %>
				<form action="" class="form-inline">
					<%= image_tag(array["profile_picture"], size: "50", class: "d-inline img-circle") %>
					<span><%= array["username"] %></span>
					<input type="text" class="hidden" name="id" id="<%= array["id"] %>" value="<%= array["id"] %>">
					<button id="unfollow" type="submit" class="btn btn-default pull-right btn-success">Unfollow</button>
				</form>
		    <% end %>
    	</ul>
  </div>
<%= render "layouts/container-end" %>