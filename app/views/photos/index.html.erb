<%= render "layouts/container-start" %>

<!--     <p id="notice"><%= notice %></p> -->

<div class="row account-info">
	<div class="col-xs-4 col-sm-4 col-md-4">
		<%= image_tag(@account_info[:profile_picture], class: "img-circle", height: 100, width: 100) %>
	</div>
	<div class="col-xs-8 col-sm-8 col-md-8 account-stats">
<!-- 		<h1><%= @account_info[:username] %></h1> -->
    <div class="col-xs-4 col-sm-4 col-md-4">
      <h6><strong><%= @account_info[:posts] %></strong></h6>
      <p>posts</p>
    </div>

    <div class="col-xs-4 col-sm-4 col-md-4">
      <h6><strong><%= @account_info[:followed_by] %></strong></h6>
      <p class="text-center">followers</p>
    </div>

    <div class="col-xs-4 col-sm-4 col-md-4">
      <h6><strong><%= @account_info[:following] %></strong></h6>
      <p class="text-center">following</p>
    </div>

    <button type="button" class="btn save-order-btn mbl">Save Photo Order</button>
  </div>

<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 account-bio">
    <h4><%= @account_info[:full_name] %></h4>
		<p><%= @account_info[:bio] %></p>
	</div>
</div>

 <div id="sortable" class="photo-grid">
  <% unless @photos.blank? %>	
      <% @photos.each do |photo| %>
        <div id="position_<%= photo.id %>" class="photo-wrapper col-xs-4 col-sm-4 col-md-4 ui-state-default" style="background-image: url(<%= photo.url_url(:standard)%>); background-size: cover; float: left; width: 32.2%">
      		<a href="<%= edit_photo_path(id: photo.id) %>">
            <i class="fa fa-picture-o fa-2x pull-right" aria-hidden="true" style="color: black; margin: 5px;"></i>
          </a>
      	</div> 
      <% end %>
  <% end %>
</div>  
<div>
  <% unless @insta_photos.blank? %>
    <% @insta_photos.each do |photo| %>
      <div class="photo-wrapper col-xs-4 col-sm-4 col-md-4" style="background-image: url(<%= photo %>); background-size: cover; float: left; width: 32.2%">
      </div>
      <!-- <div class="photo-wrapper col-xs-4 col-sm-4 col-md-4">
        <img src=<%= photo %> class="img-responsive" >
      </div>  -->
    <% end %>
  <% end %>
</div> 
<%= render "layouts/container-end" %>
